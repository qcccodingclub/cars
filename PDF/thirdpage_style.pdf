*{
	box-sizing:border-box;
}
.topnav{
	width:100%;
	background:black;
}
.topnav a{
	padding:20px 20px;
	font-size:20px;
	text-decoration:none; /*Take off the underline*/
	color:white;
	display:inline-block;
}
.topnav a:hover{
	background:red;
}
html,body{
	height:100%; /*height of image*/
	margin:0; /* To fix gap on top*/
	background:url('../IMAGES/background3.jpg');
	max-height:100%;
	max-width:100%;
	background-repeat:none;
}
